            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Acelerometro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/acelBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.455" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/senTv" android:layout_marginTop="104dp"/>
    <Button
            android:text="Proximidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/proxBtn"
            app:layout_constraintBottom_toBottomOf="parent"
