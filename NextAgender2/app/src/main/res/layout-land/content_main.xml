<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <fragment
            android:layout_weight="1"
            android:name="com.example.rodrigofrancisco.nextagender.Lista_heroes_Frag"
            android:id="@+id/fr_lista_heroes"
            tools:layout="@layout/fragment_lista_heroes_"
            android:layout_width="0dp"
            android:layout_height="match_parent">
    </fragment>

    <fragment
            android:layout_weight="2"
            android:name="com.example.rodrigofrancisco.nextagender.Descripcion_heroeFrag"
            android:id="@+id/fr_descp_heroes"
            tools:layout="@layout/fragment_descripcion_heroe"
            android:layout_width="0dp"
            android:layout_height="match_parent">
    </fragment>

</LinearLayout>