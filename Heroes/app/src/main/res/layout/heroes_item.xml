<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal" android:padding="18dp">

    <ImageView

            android:layout_width="62dp"
            android:layout_height="62dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/iv_foto"
            android:scaleType="fitXY" android:paddingRight="10dp" android:paddingBottom="0dp"
            android:paddingLeft="0dp" android:paddingTop="0dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nombre" android:paddingTop="5dp" android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp" android:textSize="17sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_poder" android:paddingTop="5dp" android:paddingBottom="0dp" android:paddingLeft="0dp"
                android:paddingRight="0dp"/>
    </LinearLayout>
</LinearLayout>